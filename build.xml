<?xml version="1.0" encoding="UTF-8"?>
<project name="UML Contradiction" basedir="." default="run">
	<property name="src" location="main"/>
	<property name="build" location="build"/>
	<path id="classpath">
	        <pathelement path="build" />
	</path>
	<target name="init">
		<mkdir dir="${build}"/>
	</target>
	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${build}" classpath="lib/log4j-1.2.16.jar;lib/java2word-3.1.jar;lib/xstream-1.3.1.jar"/>
	</target>
	<target name="run" depends="compile">
		
		<java  fork="no" classname="com.uml.contradiction.gui.Client" >
			<classpath refid="classpath"/>
			<arg line=""/>
			
		</java>
	</target>
	<target name="javadoc">
		<mkdir dir="${basedir}/javadoc/"/>
		<javadoc
			destdir="${basedir}/javadoc/"
			access="private"
			sourcepath="main"
		/>
	</target>
	<target name="jar" depends="init,compile">
		<jar destfile="diplom.jar">
			<fileset dir="build" excludes="**/*.uml"/>
			<fileset dir="." includes="images/**"/>
			<zipfileset includes="**/*.class" src="lib/log4j-1.2.16.jar"/>
			<zipfileset includes="**/*.class" src="lib/java2word-3.1.jar"/>
			<zipfileset includes="**/*.class" src="lib/xstream-1.3.1.jar"/>
			<manifest>
				<attribute name="Main-Class" value="com.uml.contradiction.gui.Client"/>
			</manifest>
		</jar>
	</target>
</project>